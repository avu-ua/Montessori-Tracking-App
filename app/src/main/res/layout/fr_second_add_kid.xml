<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/single_student_page_title"
        style="@style/PageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/single_student_page_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/fr_2_data_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        app:layout_constraintBottom_toTopOf="@id/fr2_controls_table"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_student_page_title">

        <!-- NAME row -->
        <TableRow
            android:id="@+id/fr2_name_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/_name_row_title"
                style="@style/singleStudentRowTitle"
                android:background="@drawable/text_roundstyle"
                android:text="@string/name_row_title" />

            <TextView
                android:id="@+id/name_row_text"
                style=":style/singleStudentDataField"
                android:layout_weight="3"
                android:visibility="gone" />

            <EditText
                android:id="@+id/name_row_edit"
                style=":style/singleStudentDataField"
                android:layout_weight="3"
                android:hint="@string/name_placeholder"
                android:inputType="text|textCapWords"
                android:textSize="16sp" />

            <Button
                android:id="@+id/name_row_btn"
                style="@style/singleStudentOkBtn" />
        </TableRow>


        <!-- NICK row -->
        <TableRow
            android:id="@+id/fr2_alias_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/alias_row_title"
                style="@style/singleStudentRowTitle"
                android:background="@drawable/text_roundstyle"
                android:text="@string/alias_row_title" />

            <TextView
                android:id="@+id/alias_row_text"
                style=":style/singleStudentDataField"
                android:layout_weight="3"
                android:visibility="gone" />

            <EditText
                android:id="@+id/alias_row_edit"
                style=":style/singleStudentDataField"
                android:layout_weight="3"
                android:hint="@string/alias_placeholder"
                android:inputType="text|textCapWords"
                android:textSize="16sp" />

            <Button
                android:id="@+id/alias_row_btn"
                style="@style/singleStudentOkBtn" />
        </TableRow>


        <!-- DOB row -->
        <TableRow
            android:id="@+id/fr2_dob_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dob_row_title"
                style="@style/singleStudentRowTitle"
                android:background="@drawable/text_roundstyle"
                android:text="@string/dob_row_title" />

            <TextView
                android:id="@+id/dob_row_text"
                style=":style/singleStudentDataField"
                android:layout_weight="3"
                android:visibility="gone" />

            <EditText
                android:id="@+id/dob_row_edit"
                style=":style/singleStudentDataField"
                android:layout_weight="3"
                android:hint="@string/dob_placeholder"
                android:inputType="text|textCapWords"
                android:textSize="16sp" />

            <Button
                android:id="@+id/dob_row_btn"
                style="@style/singleStudentOkBtn" />
        </TableRow>

        <!-- AGE row -->
        <TableRow
            android:id="@+id/f2_age_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/f2_age_title"
                style="@style/singleStudentRowTitle"
                android:background="@drawable/text_roundstyle"
                android:text="@string/age_row_title" />

            <TextView
                android:id="@+id/f2_age_data"
                style=":style/singleStudentDataField"
                android:layout_weight="7" />
        </TableRow>

        <!-- NOTES row -->
        <TableRow
            android:id="@+id/f2_notes_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/f2_notes_title"
                style="@style/singleStudentRowTitle"
                android:background="@drawable/text_roundstyle"
                android:text="@string/notes_row_title" />

            <ScrollView
                android:id="@+id/f2_notes_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:visibility="gone">

                <TextView
                    android:id="@+id/f2_notes_text"
                    style=":style/singleStudentDataField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="80dp"
                    android:text="@string/notes_tempo"
                    android:visibility="visible" />
            </ScrollView>

            <EditText
                android:id="@+id/f2_notes_edit"
                style=":style/singleStudentDataField"
                android:layout_weight="3"
                android:hint="@string/notes_placeholder"
                android:inputType="text|textMultiLine"
                android:textSize="16sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/f2_notes_btn"
                style="@style/singleStudentOkBtn" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/fr2_controls_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:id="@+id/fr2_controls_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/to_fr1_btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_weight="1"
                android:text="@string/previous" />

            <Button
                android:id="@+id/done_edit_btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_weight="1"
                android:text="@string/done_edit_btn" />

            <Button
                android:id="@+id/to_fr3_btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_weight="1"
                android:text="@string/to_reports_btn" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>