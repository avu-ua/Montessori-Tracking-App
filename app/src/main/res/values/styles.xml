<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#6750A3</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="StudentsListItem">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="fr2Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:paddingStart">@dimen/standard_margin</item>
        <item name="android:paddingEnd">@dimen/standard_margin</item>
    </style>

    <style name="fr2RowTitle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/text_roundstyle</item>
    </style>

    <style name="fr2RowData">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="fr2RowOkBtn">
        <item name="android:layout_width">67dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:text">OK</item>
    </style>

    <style name="fr2ControlBtn">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>